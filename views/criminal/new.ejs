<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>pakPOL | New Criminal Record</title>

    <link rel="icon" href="/gallery/ICONS/favicon.png" type="image/x-icon">

    <!-- bootstrap css -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>

    <div class="back">

    <%- include("../partials/navbar.ejs") %>

    <div class="container">
      <h2 style="top: 40px; text-align: center; position: relative;"><u>Enter a new Criminal Record</u></h2>

      <form class="f" action="/criminal" method="post" enctype="multipart/form-data">


        <!-- <div class="mb-3">
          <label for="Criminal_Id" class="form-label">Id</label>
          <input
            type="number"
            class="form-control"
            id="Criminal_Id"
            name="Criminal_Id"
            max="9999"
          />
        </div> -->


        <div class="mb-3">
          <label for="Criminal_Name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="Criminal_Name"
            name="Criminal_Name" required
          />
        </div>
        

        <div class="mb-3">
          <label for="Criminal_WantedByCountry" class="form-label">Wanted by Country</label>
          <input
            type="text"
            class="form-control"
            id="Criminal_WantedByCountry"
            name="Criminal_WantedByCountry" required
          />
        </div>
        
        
        <div class="mb-3">
          <label for="Criminal_Crime" class="form-label">Crime</label>
          <input
            type="text"
            class="form-control"
            id="Criminal_Crime"
            name="Criminal_Crime" required
          />
        </div>
        

        <div class="mb-3">
          <label for="CNIC" class="form-label">CNIC</label>
          <input
            type="text"
            class="form-control"
            id="CNIC"
            name="CNIC"
          />
        </div>


        <div class="mb-3">
          <label for="Criminal_Gender" class="form-label">Gender</label>
          <input
            type="text"
            class="form-control"
            id="Criminal_Gender"
            name="Criminal_Gender" required
          />
        </div>

        
        <div class="mb-3">
          <label for="Criminal_Height" class="form-label">Height (in feet)</label>
          <input
            type="number"
            class="form-control"
            id="Criminal_Height"
            name="Criminal_Height"
            min="2"
            max="8"
            step="0.01"
          />
        </div>
        

        <div class="mb-3">
          <label for="Criminal_Weight" class="form-label">Weight (in kgs)</label>
          <input
            type="number"
            class="form-control"
            id="Criminal_Weight"
            name="Criminal_Weight"
            min="6"
            max="250"
            step="any"
          />
        </div>

        
        <div class="mb-3">
          <label for="Criminal_Nationality" class="form-label">Nationality</label>
          <input
            type="text"
            class="form-control"
            id="Criminal_Nationality"
            name="Criminal_Nationality"
          />
        </div>
        
        
        <div class="mb-3">
          <label for="Criminal_SpokenLanguages" class="form-label">Spoken Languages</label>
          <input
            type="text"
            class="form-control"
            id="Criminal_SpokenLanguages"
            name="Criminal_SpokenLanguages"
          />
        </div>
        
        
        <div class="mb-3">
          <label for="Criminal_StateOfCase" class="form-label">State of Case</label>
          <textarea
            type="text"
            class="form-control"
            id="Criminal_StateOfCase"
            name="Criminal_StateOfCase">
          </textarea>
        </div>
        
        
        <div class="mb-3">
          <label for="Criminal_Published" class="form-label">Published</label>
          <input
            type="datetime-local"
            class="form-control"
            id="Criminal_Published"
            name="Criminal_Published"
          />
        </div>
        
         
        <!-- <div class="mb-3">
          <label for="Criminal_Image" class="form-label">Upload Image</label>
          <input
            type="text"
            class="form-control"
            id="Criminal_Image"
            name="Criminal_Image"
          />
        </div> -->
        
        
        <div class="mb-3">
          <label for="Criminal_Image" class="form-label">Upload Image</label>
          <input
            type="file"
            class="form-control"
            id="Criminal_Image"
            name="file" 
            accept="*/*" 
            required
          />
        </div>


        <div class="mb-3">
          <label for="Criminal_Image_URL" class="form-label">Upload Image URL (Optional)</label>
          <input
            type="text"
            class="form-control"
            id="Criminal_Image_URL"
            name="Criminal_Image_URL"
          />
        </div>


        <button type="submit" class="btn btn-success">Submit</button>

      </form>

    </div>
    
  </div>

    
  <script src="/js/bootstrap.min.js"></script>
  
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  </body>
</html>

